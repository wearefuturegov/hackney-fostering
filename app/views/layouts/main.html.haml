!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title HackneyFostering
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render '/layouts/layouts/header'
    - if controller_name == "full_application"
      = render '/layouts/partial/nav_application'
    - elsif controller_name == "eligibility"
      = render '/layouts/partial/nav_eligibility'
    %main.main
      = yield
    / = render '/layouts/layouts/footer'
