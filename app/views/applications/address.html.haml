%section.section

  %h1= @incredible_step.data[:title]
    
  %h2= @incredible_step.data[:sub_title]

= simple_form_for setup_application(application), url: wizard_path, html: { class: 'address_form' }, method: :put do |f|
  
  = f.fields_for @incredible_step.data[:reference], application.send(@incredible_step.data[:reference]) do |ff|
    = render partial: 'address', locals: { form: ff, hide_to: true }
    
  %section.actions
    = f.submit t('continue'), class: "confirm add-address hidden"
